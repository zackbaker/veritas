services:
  app:
    build: ./app/
    volumes:
      - ./app:/app/
    tty: true
    ports:
      - "80:80"
  dags:
    build: ./dags/
    volumes:
      - ./dags:/dags/
  meta_db:
    image: postgres:17.5
    environment:
      POSTGRES_DB: meta
      POSTGRES_USER: app
      POSTGRES_PASSWORD: password
    volumes:
      - pgdata:/var/lib/postgresql/data
    ports:
      - "5432:5432"

volumes:
  pgdata:
